/* pages/home/home.wxss */
button{
  margin: 0;
  padding: 0;
}
#home{
  width: 750rpx;
  height: 100%;
  background: #f5f5f5;
  position: relative;
}
.cover_image{
  width: 100%;
  height: 350rpx;
}
.homeCard{
  width: 80%;
  height: 300rpx;
  background: white;
  position: absolute;
  top: 290rpx;
  left: 10%;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  /* border: 1px solid black; */
}
.homeName{
  font-size: 40rpx;
  font-weight: 600;
}
.homeCellNum{
  width: 100%;
  height: 25%;
  display: flex;
  justify-content: space-between;
  /* border: 1px solid black; */
  font-size: 30rpx;
  margin-top: 7rpx
}
.homePhone{
  width: 20%;
  height: 100%;
  line-height: 250%;
/* background: gray */
}
.homeNumber{
  width: 60%;
  height: 100%;
  line-height: 250%;
}
.homeCellNum>button{
  margin-top: 3%;
  width: 18%;
  height: 43rpx;
  font-size: 20rpx;
  outline: none;
  /* border: none; */
  border: 1px solid ghostwhite;
  line-height: 43rpx;
}



